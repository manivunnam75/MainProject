@model IEnumerable<TraineesManagementSystem.Models.TraineesInSubBatches>

@{
    ViewData["Title"] = "TraineesInSubbatches";
    int mainBatchId=(int)TempData["mainBatchId"] ;
    Layout = "AdminLayout";


}
<link rel="stylesheet" href="~/css/Details.css">

<h1>SubBatch : @TempData["name"].ToString() In MainBatch : @TempData["mainBatchName"]</h1>


<button><a style="text-decoration:none;color: #fff;" asp-action="TraineesInMainBatch" asp-route-MainBatchId="@mainBatchId">Add Trainees</a></button>


<dir class="board">
    <table width="100%">
        <thead>
            <tr>
                <td></td>
                <td>TraineeId</td>
                <td>Remove</td>
                <td>Info</td>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count() > 0)
            {

                foreach (var item in Model)
                {

                    <tr>
                        <td class="people">
                            <div class="people-de">
                                <h5>

                                    <i class="fa-sharp fa-solid fa-user"></i>
                                </h5>

                            </div>

                        </td>

                        <td class="people">

                            <div class="people-de">
                                <h5>
                                    <a asp-action="GetTraineeDetailsById" asp-route-traineeId="@item.TraineeId" style="text-decoration:none;">@Html.DisplayFor(modelitem=>item.TraineeName)</a>

                                </h5>

                            </div>
                        </td>

                        <td class="people-des">

                            <h5>
                                @Html.DisplayFor(modelitem=>item.TraineeId)
                            </h5>

                        </td>



                        <td class="edit">
                            <a asp-controller="AdminView" asp-action="DelTraineeInSubBatch" asp-route-traineeId="@item.TraineeId" asp-route-SubBatchName="@item.SubBatchName">Delete</a>
                        </td>
                        <td class="edit">
                            <a asp-action="GetTraineeDetailsById" asp-route-traineeId="@item.TraineeId" style="text-decoration:none;">Details</a>

                        </td>
                    </tr>


                }
            }




            else
            {
                <tr>
                    <td colspan="4" class="text-center"><b>No Trainees here . Please Add Trainee By CLick On AddTrainee Button</b></td>
                </tr>
            }
        </tbody>



    </table>
    </dir>

